<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebServiceTutorial.Views.UserDetailPage"
             Title="Datos del Usuario">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Id" />
            <Label Text="{Binding Id}" />
            <Label Text="Nombre Completo" />
            <Entry Text="{Binding FullName}" />
            <Label Text="Nombre:" />
            <Entry Text="{Binding FirstName}" />
            <Label Text="Apellido:" />
            <Entry Text="{Binding LastName}" />
            <Label Text="Teléfono:" />
            <Entry Text="{Binding Phone}" />
            <Button x:Name="SaveButton" Text="Guardar" IsVisible="False" Command="{Binding SaveCommand}" />
            <Button x:Name="EditButton" Text="Editar" IsVisible="True" Command="{Binding EditCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>